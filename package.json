{
  "name": "gatsby-source-google-spreadsheets",
  "version": "2.3.0",
  "description": "A source plugin for Gatsby that allows reading data from Google Sheets.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "prepublish": "prettier ./src/** --write && jest && cross-env NODE_ENV=production tsc --build tsconfig.json",
    "format": "prettier ./src/** --write",
    "test": "jest"
  },
  "author": "Cian Butler <butlerx@notthe.cloud>",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-source-plugin"
  ],
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "google-spreadsheet": "^2.0.8",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.21",
    "@types/uuid": "^3.4.6",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "tabWidth": 2
  }
}

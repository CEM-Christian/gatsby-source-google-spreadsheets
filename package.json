{
  "name": "gatsby-source-google-spreadsheets",
  "version": "3.0.0",
  "description": "A source plugin for Gatsby that allows reading data from Google Sheets.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "prepublish": "prettier ./src/** --write && jest && cross-env NODE_ENV=production tsc --build tsconfig.json",
    "format": "prettier ./src/** --write",
    "test": "jest"
  },
  "author": "Cian Butler <butlerx@notthe.cloud>",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-source-plugin"
  ],
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "google-spreadsheet": "^3.0.11",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.21",
    "@types/uuid": "^7.0.3",
    "cross-env": "^7.0.2",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "tabWidth": 2,
    "arrowParens": "avoid"
  }
}
